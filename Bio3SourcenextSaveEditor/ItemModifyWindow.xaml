<ui:FluentWindow x:Class="ItemModifyWindow"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bio3SourcenextSaveEditor"
        mc:Ignorable="d"
        Title="ItemModifyWindow" MinHeight="346" MinWidth="691"
                 Width="700" Height="400" Loaded="FluentWindow_Loaded">
    <StackPanel>
        <ui:TitleBar Title="Modify Item" ShowMaximize="False" ShowMinimize="False" />
        <DockPanel Margin="10">
            <ui:Card DockPanel.Dock="Top">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Label Content="Item Name:" Margin="10" Grid.Row="0" Grid.Column="0"/>
                    <ComboBox x:Name="ItemNameComboBox" Margin="10,40,10,0" Grid.Row="0" Grid.Column="0"/>
                    <local:ItemInteractable x:Name="ItemInteractableControl" Margin="10" Grid.Row="0" Grid.Column="1"/>
                    <Label Content="Ammo/Quantity:" Margin="10" Grid.Row="1" Grid.Column="0"/>
                    <ui:NumberBox x:Name="AmmoQuantityBox" Margin="10,40,10,10" Grid.Row="1" Grid.Column="0" MaxDecimalPlaces="0" Minimum="0" Maximum="255"/>
                    <Label Content="Item Attributes:" Margin="10" Grid.Row="1" Grid.Column="1"/>
                    <ComboBox x:Name="ItemAttributesComboBox" Margin="10, 40,10,10" Grid.Row="1" Grid.Column="1"/>
                </Grid>
            </ui:Card>
            <ui:Button x:Name="SaveButton" Content="Save" Width="100" Height="30" DockPanel.Dock="Bottom" Click="SaveButton_Click" Margin="10"/>
        </DockPanel>
    </StackPanel>
</ui:FluentWindow>
