<UserControl x:Class="SaveDataInformation"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Bio3SourcenextSaveEditor"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800">
    <ui:DynamicScrollViewer MaxHeight="600">
        <StackPanel Margin="10">
            <!-- Row 1: Save file name -->
            <Label Content="Save File Name:" />
            <ui:TextBlock x:Name="SaveFileNameTextBlock" />
            <!-- Difficulty -->
            <Label Content="Difficulty:" Margin="0,10,0,0" />
            <ui:ToggleSwitch x:Name="DifficultyToggleSwitch" 
                     OnContent="Easy" 
                     OffContent="Hard" 
                     />
            <!-- Number of unlocked epilogues -->
            <Label Content="Number of Unlocked Epilogues:" Margin="0,10,0,0" />
            <ui:NumberBox x:Name="UnlockedEpiloguesNumberBox" 
                  Minimum="0" 
                  Maximum="8"
                  />
            <ui:TextBlock Text="The game needs to be cleared at least once." 
                  Foreground="Gray"
                  FontSize="12" 
                  Margin="0,2,0,0"/>
            <!-- How many times the game has been saved -->
            <Label Content="Number of Saves:" Margin="0,10,0,0" />
            <ui:NumberBox x:Name="NumberOfSavesNumberBox" 
                  Minimum="0" 
                  Maximum="255"
                  />
            <!-- Play Area (ComboBox) -->
            <Label Content="Play Area:" Margin="0,10,0,0" />
            <ComboBox x:Name="PlayAreaComboBox" />
            <!-- Player Character (ComboBox) -->
            <Label Content="Player Character:" Margin="0,10,0,0" />
            <ComboBox x:Name="PlayerCharacterComboBox" />
            <ui:TextBlock Text="If you wish to change Jill's outfit, change it on the Outfit options below and make sure Player Character is Jill (with the same outfit)." 
                  Foreground="Gray"
                  FontSize="12" 
                  Margin="0,2,0,0"/>
            <!-- Jill's Outfit -->
            <Label Content="Jill's Outfit:" Margin="0,10,0,0" />
            <ComboBox x:Name="JillsOutfitComboBox" />
            <!-- Jill's Weapon -->
            <Label Content="Jill's Equipped Weapon:" Margin="0,10,0,0" />
            <Grid ColumnDefinitions="*,Auto">
                <ComboBox x:Name="JillsWeaponComboBox" Grid.Column="0" Margin="0,0,10,0" />
                <local:ItemInteractable x:Name="JillsWeaponDisplay" Grid.Column="1" />
            </Grid>
            <!-- Jill's Sidepack Enabled Status -->
            <Label Content="Jill's Sidepack Enabled:" Margin="0,10,0,0" />
            <ui:ToggleSwitch x:Name="JillsSidepackToggleSwitch" 
                     OnContent="Enabled" 
                     OffContent="Disabled" 
                     />
            <!-- Carlos's Equipped Weapon -->
            <Label Content="Carlos's Equipped Weapon:" Margin="0,10,0,0" />
            <Grid ColumnDefinitions="*,Auto">
                <ComboBox x:Name="CarlosWeaponComboBox" Grid.Column="0" Margin="0,0,10,0" />
                <local:ItemInteractable x:Name="CarlosWeaponDisplay" Grid.Column="1" />
            </Grid>
            <!-- Carlos's Sidepack Enabled Status -->
            <Label Content="Carlos's Sidepack Enabled:" Margin="0,10,0,0" />
            <ui:ToggleSwitch x:Name="CarlosSidepackToggleSwitch" 
                     OnContent="Enabled" 
                     OffContent="Disabled" 
                     />
            <!-- Poisoned Status -->
            <Label Content="Poisoned Status:" Margin="0,10,0,0" />
            <ui:ToggleSwitch x:Name="PoisonedStatusToggleSwitch" 
                     OnContent="Poisoned" 
                     OffContent="Not Poisoned" 
                     />
        </StackPanel>
    </ui:DynamicScrollViewer>
</UserControl>
